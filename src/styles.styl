body
html
  height 100%



.container
  margin 25% auto 0
  width 1240px
  text-align center
  transform translateY(-50%)

  .input
  .output
      display inline-block
      vertical-align middle

      &:before
        content ''
        display inline-block
        height 100%
        vertical-align middle

      .pattern
      &-value
        display inline-block
        height 50px
        border 1px solid #3c3c3c
        min-width 35px
        vertical-align middle
        box-sizing border-box
        margin-right 5px
        font-size 2.5em

        input
          display block
          height 100% - 4px
          outline none
          border none
          font-size 1em
          width 250px

      .output-value
        padding 0 5px

.compare
  font-size 2.5em
  vertical-align bottom
  padding 0 5px
